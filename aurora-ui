local AuroraUI = {}
AuroraUI.__index = AuroraUI
AuroraUI.Version = "1.0.0"

-- Services
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local GuiService = game:GetService("GuiService")

-- Constants
local MOBILE_TOUCH_SIZE = 48
local PC_BUTTON_SIZE = 36
local ANIMATION_SPEED = 0.25
local HOVER_SCALE = 1.05

--[[
	â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	DEVICE MANAGER
	Intelligent device and input detection system
	â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
]]
local DeviceManager = {}
DeviceManager.__index = DeviceManager

function DeviceManager.new()
	local self = setmetatable({}, DeviceManager)
	
	-- Device capabilities
	self.isMobile = UserInputService.TouchEnabled and not UserInputService.MouseEnabled
	self.isPC = UserInputService.MouseEnabled and UserInputService.KeyboardEnabled
	self.hasGamepad = #UserInputService:GetConnectedGamepads() > 0
	self.isTablet = UserInputService.TouchEnabled and not GuiService:IsTenFootInterface()
	
	-- Input state
	self.currentInputType = self.isMobile and "Touch" or "MouseKeyboard"
	self.lastInputType = self.currentInputType
	
	-- Setup listeners
	self:_setupInputDetection()
	
	return self
end

function DeviceManager:_setupInputDetection()
	-- Track input type changes
	UserInputService.LastInputTypeChanged:Connect(function(inputType)
		self.lastInputType = self.currentInputType
		
		if inputType == Enum.UserInputType.Touch then
			self.currentInputType = "Touch"
		elseif inputType == Enum.UserInputType.MouseButton1 or inputType == Enum.UserInputType.MouseButton2 then
			self.currentInputType = "MouseKeyboard"
		elseif inputType == Enum.UserInputType.Gamepad1 then
			self.currentInputType = "Gamepad"
		end
	end)
	
	-- Track gamepad connections
	UserInputService.GamepadConnected:Connect(function()
		self.hasGamepad = true
	end)
	
	UserInputService.GamepadDisconnected:Connect(function()
		self.hasGamepad = #UserInputService:GetConnectedGamepads() > 0
	end)
end

function DeviceManager:getOptimalButtonSize()
	return self.isMobile and MOBILE_TOUCH_SIZE or PC_BUTTON_SIZE
end

function DeviceManager:shouldShowHoverEffects()
	return self.currentInputType == "MouseKeyboard"
end

function DeviceManager:getOptimalSpacing()
	return self.isMobile and 12 or 8
end

function DeviceManager:getOptimalTextSize(baseSize)
	return self.isMobile and (baseSize + 2) or baseSize
end

--[[
	â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
	THEME SYSTEM
	Unified color scheme and styling constants
	â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
]]
