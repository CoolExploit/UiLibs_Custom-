	PrimaryHover = Color3.fromRGB(71, 82, 196),
	PrimaryActive = Color3.fromRGB(58, 65, 164),
	PrimaryLight = Color3.fromRGB(111, 124, 255),
	
	-- Secondary Colors
	Secondary = Color3.fromRGB(114, 137, 218),
	SecondaryHover = Color3.fromRGB(93, 113, 180),
	
	-- Background Colors
	Background = Color3.fromRGB(32, 34, 37),
	BackgroundSecondary = Color3.fromRGB(47, 49, 54),
	BackgroundTertiary = Color3.fromRGB(64, 68, 75),
	BackgroundElevated = Color3.fromRGB(54, 57, 63),
	
	-- Text Colors
	Text = Color3.fromRGB(255, 255, 255),
	TextSecondary = Color3.fromRGB(185, 187, 190),
	TextMuted = Color3.fromRGB(114, 118, 125),
	TextDisabled = Color3.fromRGB(79, 84, 92),
	
	-- Status Colors
	Success = Color3.fromRGB(67, 181, 129),
	SuccessHover = Color3.fromRGB(56, 150, 107),
	Warning = Color3.fromRGB(250, 166, 26),
	WarningHover = Color3.fromRGB(207, 137, 21),
	Error = Color3.fromRGB(237, 66, 69),
	ErrorHover = Color3.fromRGB(196, 54, 57),
	Info = Color3.fromRGB(3, 169, 244),
